<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.istekno.gohipeandroidapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_gohipe"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_gohipe_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.GoHipeAndroidApp">
        <activity
            android:name=".ui.activity.SettingScreenActivity"
            android:theme="@style/Theme.GoHipeAndroidApp.NoActionBar" />
        <activity
            android:name=".ui.company.CompanyMainContentActivity"
            android:theme="@style/Theme.GoHipeAndroidApp.NoActionBar" />
        <activity
            android:name=".ui.engineer.EngineerMainContentActivity"
            android:theme="@style/Theme.GoHipeAndroidApp.NoActionBar" />
        <activity android:name=".ui.activity.MainScreenActivity" />
        <activity android:name=".ui.activity.ProfileScreenActivity" />
        <activity android:name=".ui.activity.LoginRegisterActivity" />
        <activity android:name=".ui.activity.IntroScreenActivity" />
        <activity
            android:name=".ui.activity.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>