<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.company.CompanyEditHireScreenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:background="@color/theme_green">
        
        <TextView
            android:id="@+id/tv_comedithirefrg_edithire"
            style="@style/TextView_Account"
            android:layout_marginTop="24dp"
            android:text="Edit hire"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_comedithirefrg_engid"
            style="@style/TextView_MaterialInput_Edit"
            android:layout_marginTop="32dp"
            android:text="@string/engineer_id"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_comedithirefrg_edithire" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/it_comedithirefrg_engid"
            style="@style/MaterialField_TextInputLayout_Edit2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_comedithirefrg_engid">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_comedithirefrg_engid"
                style="@style/MaterialField_EditText_Edit2" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_comedithirefrg_message"
            style="@style/TextView_MaterialInput_Edit"
            android:layout_marginTop="16dp"
            android:text="@string/message"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/it_comedithirefrg_engid" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/it_comedithirefrg_message"
            style="@style/MaterialField_TextInputLayout_Edit2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_comedithirefrg_message">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_comedithirefrg_message"
                android:layout_height="100dp"
                style="@style/MaterialField_EditText_Edit2" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_comedithirefrg_price"
            style="@style/TextView_MaterialInput_Edit"
            android:layout_marginTop="16dp"
            android:text="@string/price"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/it_comedithirefrg_message" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/it_comedithirefrg_price"
            style="@style/MaterialField_TextInputLayout_Edit2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_comedithirefrg_price">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_comedithirefrg_price"
                style="@style/MaterialField_EditText_Edit2" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_comedithirefrg_update"
            style="@style/MaterialButton"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/theme_orange"
            android:text="@string/update_hire"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/it_comedithirefrg_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    
</layout>