<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.engineer.hire.EngineerDetailHireScreenFragment">

    <data>
        <variable
            name="model"
            type="com.istekno.gohipeandroidapp.data.source.remote.retrofit.HireModelResponse" />

        <variable
            name="modelEng"
            type="com.istekno.gohipeandroidapp.data.source.remote.retrofit.EngineerModelResponse" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_grey"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/img_engdetailhirefrgshape1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/shape_profile_big" />

        <ImageView
            android:id="@+id/img_engdetailhirefrgshape2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/shape_profile_small" />

        <ProgressBar
            android:id="@+id/pg_detailhirefrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/theme_green"
            android:layout_centerInParent="true"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/sv_detailhirefrg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout_engdetailprojectfrg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/shape_profile_background1"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_engdetailhirefrgproject"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="centerCrop"
                        app:shapeAppearance="@style/circleList" />

                    <TextView
                        android:id="@+id/tv_engdetailhirefrgproject_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_engdetailhirefrgproject"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{model.pjName}"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_engdetailhirefrgprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_engdetailhirefrgproject_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/text_loc" />

                    <TextView
                        android:id="@+id/tv_engdetailhirefrgproject_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/tv_engdetailhirefrgprice"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="@{model.hrMessage}"
                        android:textColor="@color/black" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_engdetailhirefrg_editproject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_engdetailhirefrgproject_desc"
                        android:layout_alignStart="@+id/tv_engdetailhirefrgproject_desc"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/theme_green"
                        android:text="Accept"
                        android:textAllCaps="false" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_engdetailhirefrg_editproject2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_engdetailhirefrgproject_desc"
                        android:layout_alignEnd="@+id/tv_engdetailhirefrgproject_desc"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@android:color/holo_red_dark"
                        android:text="Denied"
                        android:textAllCaps="false" />

                    <TextView
                        android:id="@+id/tv_engdetailhirefrghire_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_engdetailhirefrgproject_desc"
                        android:layout_marginTop="16dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:padding="10dp"
                        android:text="Approved"
                        android:textColor="@color/theme_green_dark"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_line_connection"
                    android:layout_width="65dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/img_line_connection"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout_engdetailprojectfrg" />

                <RelativeLayout
                    android:id="@+id/relativeLayout_engdetailprojectfrg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="24dp"
                    android:background="@drawable/shape_profile_background1"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_line_connection">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_list_search_eng"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_mainscreen_background"
                        app:shapeAppearance="@style/circleImage_profile" />

                    <TextView
                        android:id="@+id/tv_list_search_eng_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img_list_search_eng"
                        android:layout_marginStart="24dp"
                        android:layout_toEndOf="@+id/img_list_search_eng"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{modelEng.enName}"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_list_search_eng_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_list_search_eng_name"
                        android:layout_alignStart="@+id/tv_list_search_eng_name"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{modelEng.enJobTitle}"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_list_search_eng_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_list_search_eng_job"
                        android:layout_alignStart="@+id/tv_list_search_eng_name"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{`ID : ` + modelEng.enID.toString()}"
                        android:textColor="@color/text_loc" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout_engdetailprojectfrg2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>