<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_homescreen_bg2"
            app:shapeAppearance="@style/circleImage"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:paddingHorizontal="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_skillful"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_mainscreen_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/circleImage_profile" />

            <TextView
                android:id="@+id/tv_skillful_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/issog_corp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_skillful" />

            <TextView
                android:id="@+id/tv_skillful_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Fintech"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_skillful_name" />

            <TextView
                android:id="@+id/tv_skillful_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_engineer"
                app:layout_constraintBottom_toBottomOf="@+id/tv_skillful_engineerhired"
                app:layout_constraintEnd_toStartOf="@+id/tv_skillful_engineerhired"
                app:layout_constraintTop_toTopOf="@+id/tv_skillful_engineerhired" />

            <TextView
                android:id="@+id/tv_skillful_engineerhired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_mostpop_project"
                app:layout_constraintEnd_toEndOf="@+id/tv_skillful_name"
                app:layout_constraintStart_toStartOf="@+id/tv_skillful_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_skillful_field" />

            <TextView
                android:id="@+id/tv_skillful_reqrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:text="8.7"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:drawableTopCompat="@drawable/ic_requirement"
                app:layout_constraintBottom_toBottomOf="@+id/tv_skillful_engineerhired"
                app:layout_constraintStart_toEndOf="@+id/tv_skillful_engineerhired"
                app:layout_constraintTop_toTopOf="@+id/tv_skillful_engineerhired" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</layout>